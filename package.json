{
  "name": "staff-hero",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "biome lint .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "tsc": "tsc --noEmit",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "------------- database -------------": "",
    "db:migration:up": "dotenvx run -f .env -- bunx supabase migration --workdir=src/data up",
    "------------- testing -------------": "",
    "test": "vitest --watch false --passWithNoTests",
    "test:dev": "vitest --watch true --passWithNoTests",
    "test:ci": "vitest --watch false --passWithNoTests --coverage",
    "test:e2e:ci": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:dev": "npm-run-all --parallel dev test:e2e:ui"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.2",
